escape ^]]

term screen-256color
altscreen on

screen -t edit       0 bash
screen -t build      1 bash
screen -t admin      2 bash
screen -t svc        3 bash
screen -t top        4 bash
screen -t svc2       5 bash
screen -t db         6 bash
screen -t misc       7 bash
screen -t misc2      8 bash
screen -t remote     9 bash

select 0

# NB: these are "shift+1" through "shift+0" to get bindings to get to terminals 11 through 19
# bind  ! select 11
# bind  @ select 12
# bind \# select 13
# bind  $ select 14
# bind  % select 15
# bind \^ select 16
# bind  & select 17
# bind  * select 18
# bind  ( select 19
# bind  ) select 10


# shell -bash
# startup_message off
hardstatus alwayslastline
hardstatus string '%{gk}[ %{G}%H %{g}][%= %{wk}%?%-Lw%?%{=b kR} (%{W}%n*%f %t%?(%u)%?%{=b kR})%{= kw}%?%+Lw%?%?%= %{g}][%{Y}%l%{g}] %{=b C}[ %m/%d %c ]%{W}'

attrcolor b ".I"
